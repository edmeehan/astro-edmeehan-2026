---
import MainNavigation from "@components/navigation/main-nav/main-nav.astro";
import Components from "@components/utils/renderBlock.astro";
import Layout from "@layouts/BaseLayout.astro";

type Props = {
  frontmatter: {
    title: string;
    description?: string;
    keywords?: string[];
    image?: string;
    canonical?: string;
    pageSections: any[];
  };
  mainNav?: Record<string, any>;
};

const { frontmatter, mainNav } = Astro.props as Props;
---

<Layout
  title={frontmatter.title}
  description={frontmatter.description}
  keywords={frontmatter.keywords}
  image={frontmatter.image}
  canonical={frontmatter.canonical}
>
  <MainNavigation {...mainNav ?? {}} style="margin-top: var(--spacing-md);" />
  <Components contentSections={frontmatter.pageSections} propName="pageSections" />
</Layout>
