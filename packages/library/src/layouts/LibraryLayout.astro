---
import "@skele/styles/skele.pcss";
import { z } from "zod/v4";
const libraryLayoutSchema = z.object({
  title: z.string().default("Skele Library"),
});

import Section from "@skele/components/layouts/Section/index.astro";

const props = libraryLayoutSchema.parse(Astro.props);
---

<!doctype html>
<html lang="en" data-theme="light">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{props.title}</title>
    <slot name="head" />
  </head>
  <body>
    <Section maxContentWidth="md" padding={{ horizontal: "md", vertical: "lg" }}>
      <slot />
    </Section>
  </body>
</html>
