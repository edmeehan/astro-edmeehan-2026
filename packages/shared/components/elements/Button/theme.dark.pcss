[data-theme="dark"] {
  /* Primary */
  --button-primary-backgroundColor: var(--blue-6);
  --button-primary-fontColor: var(--gray-0);
  --button-primary-borderColor: transparent;
  --button-primary-outlineColor: unset;
  --button-primary-hover-backgroundColor: var(--blue-8);
  --button-primary-hover-fontColor: var(--gray-0);
  --button-primary-hover-borderColor: transparent;

  /* Secondary */
  --button-secondary-backgroundColor: var(--gray-6);
  --button-secondary-fontColor: var(--element-body-color);
  --button-secondary-borderColor: transparent;
  --button-secondary-outlineColor: var(--element-body-color);
  --button-secondary-outlineBorderColor: var(--gray-7);
  --button-secondary-hover-backgroundColor: var(--gray-7);
  --button-secondary-hover-fontColor: var(--element-body-color);
  --button-secondary-hover-borderColor: transparent;

  /* Ghost */
  --button-ghost-backgroundColor: transparent;
  --button-ghost-fontColor: var(--element-body-color);
  --button-ghost-borderColor: transparent;
  --button-ghost-outlineColor: unset;
  --button-ghost-hover-backgroundColor: var(--gray-8);
  --button-ghost-hover-fontColor: var(--element-body-color);
  --button-ghost-hover-borderColor: transparent;

  /* Contrast */
  --button-contrast-backgroundColor: var(--gray-1);
  --button-contrast-fontColor: var(--gray-12);
  --button-contrast-borderColor: transparent;
  --button-contrast-outlineColor: unset;
  --button-contrast-hover-backgroundColor: var(--gray-3);
  --button-contrast-hover-fontColor: var(--gray-12);
  --button-contrast-hover-borderColor: transparent;

  /* Outline */
  --button-outline-fontColor: var(--gray-3);
  --button-outline-hover-backgroundColor: var(--gray-8);
}
